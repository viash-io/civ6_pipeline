manifest {
  nextflowVersion = '!>=20.12.1-edge'
}

// ADAPT rootDir ACCORDING TO RELATIVE PATH WITHIN PROJECT
params {
  rootDir = "$projectDir/../.."
}

def viash_temp = System.getenv("VIASH_TEMP") ?: "/tmp/"
def rootDir = java.nio.file.Paths.get(params.rootDir).toAbsolutePath().normalize().toString()
targetDir = "$rootDir/target/nextflow"

// INSERT CUSTOM IMPORTS HERE
includeConfig "$targetDir/civ6_save_renderer/plot_map/nextflow.config"
includeConfig "$targetDir/civ6_save_renderer/combine_plots/nextflow.config"
includeConfig "$targetDir/civ6_save_renderer/convert_plot/nextflow.config"
includeConfig "$targetDir/civ6_save_renderer/parse_header/nextflow.config"
includeConfig "$targetDir/civ6_save_renderer/parse_map/nextflow.config"
// END INSERT


docker {
  runOptions = "-v $rootDir:$rootDir -v $viash_temp:$viash_temp"
}

params {
  // Setting debug = true prints more information on the console
  debug = false
  // Default publishDir, can be overridden using --publishDir
  publishDir = "output"
}
